<style>
p {
  max-height: 200px;
  overflow: scroll;
}
</style>
<hr/>
<article>

<p><%= locals.essay %></p>
<% if(score > 83) { %>
	<h3 style="color:lightgreen;"><%= name %> got a <%= score %>%</h3>
<% } else { %>
	<h3 style="color:red;"><%= name %> got a <%= score %>%</h3>
<% } %>
<table>
	<tr>
		<th>Penalty</th>
		<th>Reason</th>
	</tr>
	<% for (var i = 0; i < locals.why.length; i++) { %>
	<tr>
			<th><%= why[i][1] %></th>
			<th><%= why[i][0] %></th>
	</tr>
	<% } %>
</table>

</article>
